generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model file {
  id          String   @id @default(uuid()) @map("_id")
  filename    String
  data        String    // Armazenará os dados binários do arquivo
  size        Int
  createdAt   DateTime @default(now())
  // userId      String?

  // chatHistory chatHistory[]
}

model chatHistory {
  id          String   @id @default(uuid()) @map("_id")
  userId      String  
  fileId      String   
  question    String   
  answer      String   
  createdAt   DateTime @default(now())
  
  // Relacionamento com o arquivo
  //file        file     @relation(fields: [fileId], references: [id])
}
